main
  margin-top 20px

// Autor post main
.AuthorPost
  font-size 16px
  &-img
    background-position top center
    background-size cover
    border 5px solid #fff
    border-radius 50%
    border-radius 50%
    box-shadow 1px 5px 1px rgba(204, 204, 204, 0.8)
    display block
    height 100px
    margin 0 auto
    width 100px
  &-meta
    padding-top 10px !important
    text-align center
  &-name
    display block
    font-size 1.5em
    font-weight 500
    text-align center
    text-transform capitalize
  &-location
    margin-right 10px
  &-web
    font-weight bold
    i
      vertical-align middle


// Footer
.Footer
  background-color #fff
  box-shadow 0 1px 3px 0 rgba(0,0,0,0.4)
  padding-top 1em
  position relative
  text-align center
  z-index 99
  &-wrap
    padding-top 1em
  &-copy
    opacity .9
    padding-bottom 10px
  &-social
    padding 0
    margin 0
  &-socialItem
    display inline-block
    list-style none
    margin-left 2px
    vertical-align top
    a
      color #fff
      margin 0
      padding 0
      width 36px
      &:hover
        opacity .9

// Menu Navigation
.Menu
  overflow visible
  &-profile
    text-align center
    background-position top center
    background-size cover
  &-mobileContent
    padding 16px
    background rgba(0, 0, 0, 0.3)
  &-logoTitle
    font-size 20px
    margin 0 auto
  &-pageDes
    font-size 15px
    line-height 18px
    margin 0 auto
  &-logoMobile
    max-width 200px
    line-height 0
    margin 0 auto

  .nav-wrapper
    padding 0 0.75rem
  .side-nav a
    height 44px
    line-height 44px
  i
    font-size 30px !important
    color #6d6d6d !important


  // result rearch
  &-resultForm
    padding 10px 15px
    line-height 1
    color #777
    display block
    border 1px solid #aaa
    border-top transparent
    border-bottom transparent
    font-weight 500
    &:hover
      background-color #f1f1f1
      color #333
    &:first-child
      border-top solid 1px #d6d6d6
    &:last-child
      border-bottom solid 1px #aaa
      padding-bottom 20px
  &-openSearch
  &-closeSearch
    background #fff
    color #6d6d6d
    cursor pointer
    display inline-block
    line-height 1
    position absolute
    right 0.75rem
    top 12px
  &-form
    z-index 999
    opacity 1
    transition all .2s ease
    left 0
    position absolute
    text-align left
    width 100%
    top 0

    form
      background #fff
      margin-right 40px
    input
      white-space nowrap
      color #6d6d6d
      &:focus
        border-bottom none !important
        box-shadow none !important
    &.close
      opacity 0
      display none


// Logo
.Logo
  display none
  height 64px
  margin 0 auto
  max-width 180px
  overflow hidden
  text-align center
  &-img
    margin-top 10px

// Post Loop
.Ps
  &-inner
    margin-bottom 30px
    padding-bottom 50px
    position relative
  &-img
    background-position top center
    background-size cover
    height 200px
    position relative
  &-title
    font-size 18px
    font-weight 500
    line-height 1.3
    margin 0 auto
    position relative
  &-excerpt
    padding 0 15px
    font-size 16px
  &-link
    color $color-title
    display block
    padding 12px 15px 8px 15px
  &-footer
    border-top 1px solid #edecec
    bottom 0
    color #6d6d6d
    left 0
    position absolute
    right 0
  &-datetime
    display inline-block
    vertical-align top
  &-tag
  &-share
    padding 10px 15px
  &-share
    cursor pointer
    &:hover
      .Ps-shareC
        backface-visibility hidden
        opacity 1
        transform translateX(0)
        visibility visible
  &-shareC
    opacity 0
    position absolute
    bottom 45px
    right 5px
    z-index 10
    text-align center
    margin 0
    transform translateX(-40px)
    transition-duration .3s
    transition-timing-function cubic-bezier(.25,.1,.25,1)
    visibility hidden
  &-shareI
    margin-bottom 5px

// pagination
.pagination
  color #444
  padding 3em 0.75rem !important
  text-align center
  &-newer
  &-number
  &-older
    display inline-block
    position relative
    vertical-align middle
  &-number
    height 55.5px
    line-height 45px
    padding 0 20px

.Post
  &-imgContent
    line-height 0
    margin 0 auto
    padding 0
  &-title
    font-size 2em
    line-height 35px
    margin-top 0
    margin-bottom 10px

  &-content
    font-size 16px
    p img
      text-align center
      margin 0 auto
    a
      border-bottom .08em solid rgba(0,0,0,0.1)
      padding-bottom 0.2em
      &:hover
        border-bottom .08em solid $link-blue-hover
        color $link-blue-hover
    ul
      padding-left 1em
      li
        position relative
        padding 0 0 15px 1em

        p
          margin 0

        i
          color #e91e63
          font-size 10px
          left 0
          position absolute
          top 5px
      &:nth-child(2n+1)
        li i
          color #4CAF50

    h2
    h3
    h4
    h5
    h6
      margin 1.8em auto
      &:before
        color $color-before-title
        content '#'
        display inline
        font-weight bold
        margin-right 5px

    blockquote
      border-color $color-blockquote
      width 90%
      margin-left auto
      margin-right auto


// Share
.Share
  padding 1.5em 0
  &-hidden
    display none
    margin-left 5px
    text-transform capitalize
  &-items
    margin-right 5px
    padding-left 1.5em
    padding-right 1.5em
    display inline-block
    vertical-align top
  .whatsapp
    padding-left 0
    padding-right 0
  &-title
    font-size 1.3em
    font-weight 500
    padding 1em 0

