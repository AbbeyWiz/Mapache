</head>
<body>

  <div class="Landing">
    {{!-- Add Header --}}
    {{> "header"}}
    {{!-- Add Content Body --}}
    <main>
      <div class="u-wrap">
        <section class="row">
          {{{body}}}
        </section>
      </div>
    </main>
    {{!-- Add footer --}}
