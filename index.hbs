{{!< default}}
<div class="row">
  <article class="Header col s12">
    <div class="u-wrap">
      <div class="u-cover valign-wrapper center" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
        <header class="Header-home valing">
          {{!-- Blog name --}}
          <h1 class="Header-homeTitle  center">{{@blog.title}}</h1>
          {{!-- Blog description --}}
          <p class="Header-homeDes">{{@blog.description}}</p>
        </header>
      </div>
    </div>
  </article>
</div>
