{{!-- Add layout --}}
{{!< default}}
<section id="cover" class="cover full-height">
    {{#if @blog.cover}}<div class="background"><span style="background-image: url({{@blog.cover}})"></span></div>{{/if}}
    <article class="cover-wrap">
        {{!-- Blog name --}}
        <h1 class="cover-title animated bounceInDown">{{@blog.title}}</h1>
        {{!-- Blog description --}}
        <p class="cover-description animated bounceIn">{{@blog.description}}</p>
    </article>
    <div class="mouse hide-before-md"><span class="scroll"></span></div>
</section>
{{! The tag below includes the post loop - partials/loop.hbs }}
{{> "loop"}}
