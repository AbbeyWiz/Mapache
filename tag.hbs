{{!-- Add Layout --}}
{{!< default}}
<header class="godo-header {{#if tag.image}}cover" style="background-image: url({{tag.image}}){{else}}no-cover{{/if}}">
  <article class="godo-header-wrap">
    {{!-- Blog name --}}
    <h1 class="godo-header-title">{{tag.name}}</h1>
    {{!-- Blog description --}}
    <p class="godo-header-description">{{#if tag.description}}{{tag.description}}{{else}}Una Colección de {{pagination.total}} Artículos{{/if}}</p>
  </article>
</header>
{{!-- Add Loop --}}
{{> "loop"}}
