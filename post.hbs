{{!-- Add Layout --}}
{{!< default}}

{{#post}}

<section class="container">
	<div class="post-wrapper">

		<div class="row">
			<div class="col s12 content">

				{{!-- Article content  --}}
				<article class="post">
					<header class="post-header">
						<h1 class="post-title">{{title}}</h1>

						{{!-- author, date, tag --}}
						<div class="post-byline">
						{{#author}}
							<a class="post-author-avatar hide-before-md" href="{{url}}" style="background-image:url({{#if image}}{{image}}{{else}}{{asset "img/user-image.png"}}{{/if}})"></a>
							By <strong><a href="{{url}}">{{name}}</a> â€” </strong>
						{{/author}}
							<time class="timestamp" datetime="{{date format='YYYY-MM-DD'}}">{{date published_at timeago="true"}}</time>
							in {{tags limit="1"}}
						</div>
					</header>

					{{!-- Add Post Image --}}
					{{^has tag="#image"}}
						{{#if image}}<figure class="post-image"><img class="post-img" src="{{image}}" alt="{{title}}" /></figure>{{/if}}
					{{/has}}

					{{!-- Post share top --}}
					{{> widget-post-share }}

					{{!-- Post content body --}}
					<div class="post-body">{{content}}</div>

					{{!-- Post All Tags (category) --}}
					{{#if tags}}<div class="post-tags">{{#foreach tags}}<a href="{{url}}" title="{{name}}" class="btn btn-shadow">{{name}}</a>{{/foreach}}</div>{{/if}}

					{{!-- post Share Button and Suscribe newsletter --}}
					<div class="row share-subscribe">
						{{> widget-share}}
						{{> widget-newsletter}}
					</div>

					{{!-- Post author info --}}
					{{> widget-post-author}}

					{{!-- post Comments Section --}}
					<div id="post-comments" class="post-comments">
						<div id="disqus_thread"></div>
						{{!-- Comments section for facebook --}}
						<div class="fb-comments" data-href="{{url absolute="true"}}" data-width="100%" data-numposts="5"></div>
					</div>

					{{!-- Post Related --}}
					{{> widget-post-related}}
				</article>

			</div>

			{{> "sidebar"}}

		</div>
	</div>
</section>
{{/post}}
